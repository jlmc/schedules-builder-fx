<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>


<AnchorPane fx:id="root" minHeight="500.0" minWidth="700.0" prefHeight="500.0" prefWidth="700.0" stylesheets="@backofficecomponnet.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="org.xine.schedules.builder.fx.backoffice.subject.SubjectCreateController">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox minWidth="525.0" prefHeight="25.0" prefWidth="525.0" styleClass="headerbox" VBox.vgrow="NEVER">
               <children>
                  <Label fx:id="title" minHeight="25.0" text="Disciplina (Criar nova disciplina)" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <VBox minWidth="525.0" prefHeight="200.0" prefWidth="525.0" styleClass="bodybox" VBox.vgrow="ALWAYS">
               <children>
                  <GridPane hgap="5.0">
                     <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" percentWidth="30.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" valignment="CENTER" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" valignment="TOP" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <Label text="Name da disciplina:" />
                        <Label text="Descrição da Disciplina:" GridPane.rowIndex="2" />
                        <TextField fx:id="nameField" GridPane.columnIndex="1" />
                        <TextArea fx:id="descriptionField" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <VBox.margin>
                        <Insets left="30.0" right="30.0" />
                     </VBox.margin>
                  </GridPane>
               </children>
            </VBox>
            <HBox maxHeight="25.0" minHeight="25.0" minWidth="525.0" prefHeight="25.0" prefWidth="525.0" styleClass="footerbox">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Button fx:id="backButton" mnemonicParsing="false" styleClass="backButton" text="Back" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT" spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Button fx:id="cancelButton" mnemonicParsing="false" text="Cancel" />
                        <Button fx:id="saveButton" mnemonicParsing="false" styleClass="saveButton" text="Save" />
                     </children>
                  </HBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
